<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h3>Thank you for your order!</h3>
    <p> Here's are the item(s) you purchased! </p>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |item| %>
          <tr>
            <td>
              <%= image_tag item.product.image.tiny %>
            </td>
            <td>
              <h4>
                <%= item.product.name %>
              </h4>
              <%= item.product.description %>
            </td>
            <td>
              <%= humanized_money_with_symbol item.item_price %>
            <td>
                ( <%= item.quantity %> )
            </td>
            <td>
              <%= humanized_money_with_symbol item.quantity * item.item_price %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <tfoot>
    <div class="text-info">
      <br>
      <h4> 
        Total: <%= humanized_money_with_symbol (@order.total) %> 
      </h4>
      <h4>
        An E-mail with the order details will be sent to : <%= @order.email %>
      </h4>
      <h4>
        Thank you for your purchase!
      </h4>
    </div>
  </tfoot>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
